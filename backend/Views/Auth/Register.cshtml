@model RegisterAuthModel

<div class="login-page">
    <div class="lead">
        <h1>Register</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Account</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                            <span asp-validation-for="Username"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password"
                                autocomplete="off">
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PasswordConfirm"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="PasswordConfirm"
                                autocomplete="off">
                            <span asp-validation-for="PasswordConfirm"></span>
                        </div>
                        <button class="btn btn-primary" name="button" value="login">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>

                    <div class="d-flex mt-3">
                        <a class="btn btn-primary" asp-controller="Auth" asp-action="Login"
                            asp-route-returnUrl="@Model.ReturnUrl">
                            Back to Login
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>