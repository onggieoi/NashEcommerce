@model CartOrderRespone

@{
    var total = Model.Product.Price * Model.Quantity;
}

<div class="row mb-4">
    <div class="col-md-5 col-lg-3 col-xl-3">
        <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
            <img class="img-fluid w-100" src="@Model.Product.Image" alt="Sample">
        </div>
    </div>
    <div class="col-md-7 col-lg-9 col-xl-9">
        <div>
            <div class="d-flex justify-content-between">
                <div>
                    <h5>@Model.Product.Name</h5>
                    <p class="mb-3 text-muted text-uppercase small">Category: @Model.Product.CategoryName</p>
                    <p class="mb-2 text-muted text-uppercase small">Price: $ @Model.Product.Price</p>
                    <p class="mb-3 text-muted text-uppercase small">Description: @Model.Product.Description</p>
                </div>
                <div>Total: $ @total</div>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a href="#!" type="button" class="card-link-secondary small text-uppercase mr-3">
                        <i class="fas fa-trash-alt mr-1"></i> Remove item
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>